extends layout

block content
  h1= title
  -let items = results
  div(class="container-fluid")
  div(class="row")
   each item,index in results
    div(class= "col-sm-2", onclick=`buy(${index})`) shoeSize:  #{item.shoeSize}       
    div(class= "col-sm-2", onclick=`buy(${index})`) shoeType:  #{item.shoeType}   
    div(class= "col-sm-2", onclick=`buy(${index})`) shoeBrand:   #{item.shoeBrand}
  script.
   function buy(a){
    alert(`You purchased item ${a+1}`)
   }